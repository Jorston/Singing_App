<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/mainBackGround"
tools:context=".Interfaces.Sexto">
<FrameLayout
    android:id="@+id/contenedor_general"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="Editar perfil"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="#fff"/>

            <ImageView
                android:id="@+id/imageActualizar"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/image"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/downloadImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:paddingRight="40dp"
                    android:paddingLeft="40dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/archive"/>
                <ImageButton
                    android:id="@+id/downloadImageton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:paddingRight="40dp"
                    android:paddingLeft="40dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/save"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btnEnviarMensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/border_style"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Guardar"
                android:textStyle="bold"
                android:textSize="20dp"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
</FrameLayout>


