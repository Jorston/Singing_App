<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:textAlignment="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/border_rectangulo"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="1dp">
        <TextView
            android:id="@+id/usuariopsql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="usernick"
            android:textColor="#2E54ED"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/nombrepsql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="nombre"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id="@+id/emailpsql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="email"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id="@+id/contrasenhapsql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#2E54ED"
            android:layout_marginRight="20dp"
            android:text="contrasena"/>
    </LinearLayout>
</LinearLayout>