<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmento_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackGround"
    tools:context=".Interfaces.Primero">

    <FrameLayout
        android:id="@+id/contenedor_general"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:text="Usuario:"
                    android:textSize="22dp"
                    android:textColor="#99FFFFFF" />

                <TextView
                    android:id="@+id/nombreUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:text="Nombre Usuario"
                    android:textColor="#99FFFFFF" />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_marginBottom="80dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:src="@drawable/user_flaticon"
                    android:layout_width="wrap_content"
                    android:layout_height="245dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="40dp"
                    android:background="@color/white_opacity_40" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="244dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="76dp"
                android:background="#66FFFFFF"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="244dp"
                    android:inputType="text|textMultiLine"
                    android:background="#f5f5f5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:hint="Descripcion ..."
                    android:text="Lorem ipsum dolor sit amet consectetur adipiscing elit, senectus primis elementum nascetur sem habitasse. Varius porttitor vehicula posuere conubia sodales litora primis quis, convallis ad curabitur neque nulla augue gravida, cursus egestas bibendum suscipit auctor porta est."
                    android:enabled="true"
                    android:gravity="top"/>
            </LinearLayout>

        </FrameLayout>

    </FrameLayout>
</FrameLayout>