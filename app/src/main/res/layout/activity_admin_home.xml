<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Interfaces.AdminHome"
android:background="@color/mainBackGround">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contenedor_general">
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.app.Interfaces.AdminHomeFragment"
        tools:layout="@layout/fragment_admin_home">
    </fragment>

</FrameLayout>


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_gravity="bottom"
        android:background="#4DFFFFFF"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1admin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="12dp"
            android:drawableTop="@drawable/clock"
            android:background="#f5f5f5"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn2admin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/info"
            android:paddingTop="12dp"
            android:layout_weight="1"
            android:background="#f5f5f5"/>

        <Button
            android:id="@+id/btn3admin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/document"
            android:paddingTop="12dp"
            android:layout_weight="1"
            android:background="#f5f5f5"/>

        <Button
            android:id="@+id/btn4admin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/database"
            android:paddingTop="12dp"
            android:layout_weight="1"
            android:background="#f5f5f5"/>

        <Button
            android:id="@+id/btn5admin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/chatbox"
            android:paddingTop="12dp"
            android:layout_weight="1"
            android:background="#f5f5f5"/>
        <Button
            android:id="@+id/btn6admin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/settings"
            android:paddingTop="12dp"
            android:layout_weight="1"
            android:background="#f5f5f5"/>

    </LinearLayout>
</FrameLayout>

</RelativeLayout>